# Server Configuration
HOST=127.0.0.1
PORT=8000
RELOAD=true
LOG_LEVEL=info

# CORS Configuration
# Use "*" to allow all origins (for development only)
# Or specify multiple origins separated by commas: http://localhost:3000,http://localhost:5500
CORS_ORIGINS=http://localhost:5500,http://127.0.0.1:5500
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Database Configuration
# Options: sqlalchemy, mongo
ORM=sqlalchemy

# SQLAlchemy Configuration
DATABASE_URL=sqlite:///./test.db

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=mi_proyecto
